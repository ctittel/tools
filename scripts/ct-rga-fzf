#!/bin/bash

RG_PREFIX="rga --files-with-matches --multiline --multiline-dotall"

RGA_FLAGS="--multiline --multiline-dotall"

file="$(
    FZF_DEFAULT_COMMAND="$RG_PREFIX '$1'" \
        fzf --sort --preview="[[ ! -z {} ]] && rga $RGA_FLAGS --pretty --context 5 \$(ct-make-regex {q}) {}" \
            --phony -q "$1" \
            --bind "change:reload:$RG_PREFIX \$(ct-make-regex {q})" \
            --preview-window="70%:wrap"
)" &&
echo "opening $file" &&
xdg-open "$file"
